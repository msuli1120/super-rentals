<li>
  {{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}} in {{rental.city}}{{/link-to}}
  {{#if isImageShowing}}
    <div><img src={{rental.image}} alt={{rental.type}} {{action 'hideImage'}}></div>
  {{else}}
    <button {{action 'showImage'}}>Show Image</button>
  {{/if}}
  {{update-rental rental=rental update="update"}}
  <button  {{action 'delete' rental}}>Delete Rental</button>
</li>
